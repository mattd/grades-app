    "webpack-dev-server": "^1.16.2",
    "webpack-hot-middleware": "^2.13.0"
  },
  "scripts": {
    "build": "npm run clean && NODE_ENV=production webpack --config config/webpack/prod.js",
    "build:production": "FIREBASE_ENV=production npm run build",
    "build:staging": "FIREBASE_ENV=staging npm run build",
    "clean": "rm -rf ./src/static",
    "deploy:production": "npm run package && ./node_modules/.bin/firebase deploy -P production",
    "deploy:staging": "npm run package && ./node_modules/.bin/firebase deploy -P staging",
    "package": "cp -R src/index.html src/static public",
    "start": "PORT=3000 node server.js",
    "test": "NODE_PATH=src/js ava",
    "test:watch": "npm test -- --watch"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "src/js/**/*.{js,jsx}"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
